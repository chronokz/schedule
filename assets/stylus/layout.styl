.left_col
	width 25%
	float left
.right_col
	width 75%
	float left

table.variants
	border 0
	thead th
		height 57px
		color #fff
		font-weight normal
		border 0 !important
		vertical-align middle 
	thead tr
		background #a1b5be
	tbody tr
		background-color #f5f7f8
		color #333	
	tbody tr:nth-child(even)
		background-color #eff5f6
	td
		border 0 !important
		border-bottom 1px solid #deebed !important
		height 37px

#schedule
	width auto
	position relative
	left 0
	user-select none
	border-top 0

#schedule th
	border 0
	// outline 1px solid #ddd	
	text-align center
	background #5e7d8c
	color #fff
	font-weight normal
	text-transform uppercase
	
#schedule th .dayOfWeek
	text-transform none
	font-size 11px
	color #849ca7
	
#schedule th .dayInMonth
	font-size 11px

#schedule .dayList
	height 21px
	
#schedule .dayList th
	background #476777 
	padding 0

#schedule td
	min-width 60px
	position relative
	padding 0
	height 37px
	border 0
	// outline 1px solid #ddd
	border-bottom 1px solid #deebed
	&:after
		content ' '
		position absolute
		right 0
		width 1px
		top 10px
		bottom 10px
		background-color #a7bcc6
	
#schedule .label-td
	position absolute
	user-select none
	cursor move
	min-width 100%
	margin 8px 0
	
.label-td
	border-radius 5px
	line-height 16px
	text-align left
	// box-shadow inset 1px 1px 7px -2px #333

.label-td-green
	background #6eba44
.label-td-blue
	background #00bede
.label-td-yellow
	background #ffc30b
.label-td-red
	background #f05c1b
	
.limiter
	overflow hidden
	width 100% 

.edit .title_create
	display none
	

.create .title_edit
	display none
.create .action_remove
	display none
	
.tooltipList
	li
		margin-bottom 20px
	.label
		width 50px
		height 20px
		display inline-block
		vertical-align middle
		margin-right 5px
	.icon-employee
		background url('../img/by_employee.png') left center no-repeat
		padding-left 20px
	.icon-site
		background url('../img/by_site.png') left center no-repeat
		padding-left 20px
	.icon-agent
		background url('../img/by_agent.png') left center no-repeat
		padding-left 20px