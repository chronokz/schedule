// body
// 	font size_14/21px Arial
// 	background color_white
column_width = 60px

.left_col
	width 25%
	float left
.right_col
	width 75%
	float left

table.variants
	border 0
	thead th
		height 57px
		color #fff
		font-weight normal
		border 0 !important
		vertical-align middle 
	thead tr
		background #a1b5be
	tbody tr
		background-color #f5f7f8
		color #333	
	tbody tr:nth-child(even)
		background-color #eff5f6
	td
		border 0 !important
		border-bottom 1px solid #deebed !important
		height 37px

#schedule
	width auto
	position relative
	left 0
	user-select none
	border-top 0

#schedule th
	border 0
	// outline 1px solid #ddd	
	text-align center
	background #5e7d8c
	color #fff
	font-weight normal
	text-transform uppercase
	cursor move
	cursor -webkit-grab
	cursor -moz-grab
	cursor grab
	
#schedule th .dayOfWeek
	text-transform none
	font-size 11px
	color #849ca7
	
#schedule th .dayInMonth
	font-size 11px

#schedule .dayList
	height 21px
	
#schedule .dayList th
	background #476777 
	padding 0

#schedule td
	min-width column_width
	position relative
	padding 0
	height 37px
	border 0
	// outline 1px solid #ddd
	border-bottom 1px solid #deebed
	&:after
		content ' '
		position absolute
		right 0
		width 1px
		top 6px
		bottom 6px
		background-color #a7bcc6
		z-index 200
	
#schedule .label-td
	position absolute
	user-select none
	cursor pointer
	min-width 100%
	margin 6px 0
	border 1px solid #fff
	&.earlyin
		border-top-left-radius 0
		border-bottom-left-radius 0
		&:before
			position absolute
			content ' '
			// background-color orange
			top 0
			bottom 0
			left -(column_width/4)
			width (column_width/4)
			border-top-left-radius 5px
			border-bottom-left-radius 5px
	&.laterout
		border-top-right-radius 0
		border-bottom-right-radius 0
		&:after
			position absolute
			content ' '
			// background-color orange
			top 0
			bottom 0
			right -(column_width/4)
			width (column_width/4)
			border-top-right-radius 5px
			border-bottom-right-radius 5px
	> span
		overflow hidden
		text-overflow ellipsis
		display block
	
.label-td
	border-radius 5px
	line-height 16px
	text-align left
	// box-shadow inset 1px 1px 7px -2px #333

.label-td-green
	background #6eba44
	&:after
		background-color #6eba44
	&:before
		background-color #6eba44
.label-td-blue
	background #00bede
	&:after
		background-color #00bede
	&:before
		background-color #00bede
.label-td-yellow
	background #ffc30b
	&:after
		background-color #ffc30b
	&:before
		background-color #ffc30b
.label-td-red
	background #f05c1b
	&:after
		background-color #f05c1b
	&:before
		background-color #f05c1b
	
.limiter
	overflow hidden
	width 100% 

.edit .title_create
	display none
	

.create .title_edit
	display none
.create .action_remove
	display none
	
